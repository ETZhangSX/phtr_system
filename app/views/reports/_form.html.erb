<%= form_for(@report) do |form| %>
  <%= render 'shared/error_messages', object: form.object %>

  <%= form.label :address %>
  <%= form.select :address, Report::ADDRESS,
                  {include_blank: "Select an address"},
                  class: "ui dropdown",
                  class: 'form-control' %>


  <%= form.label :size %>
  <%= form.number_field :size, min:1, max:10, class: 'form-control' %>

  <%= form.label :location %>
  <%= form.text_field :location, class: 'form-control' %>

  <%= form.label :district %>
  <%= form.text_field :district, class: 'form-control' %>

  <%= form.submit yield(:button_text), class:"btn btn-primary"%>
<% end %>
